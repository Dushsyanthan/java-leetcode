class Solution {
    public int maxArea(int[] arr) {
        int left = 0, right = arr.length - 1;
        int maxArea = 0;

        while (left < right) {
            int h;
            if (arr[left] < arr[right]) {
                h = arr[left];
                left++;
            } else {
                h = arr[right];
                right--;
            }
            int area = h * (right - left + 1);
            if (area > maxArea) maxArea = area;
        }

        return maxArea;
    }
}
