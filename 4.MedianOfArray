public class Task4 {
	
	public static void main(String[] args) {
		int nums1[]= {1,3};
		int nums2[]= {2,4};
		int arr3[]=new int[4];
	        System.arraycopy(nums1,0,arr3,0,nums1.length);
			System.arraycopy(nums2, 0, arr3, nums1.length, nums2.length);
			Arrays.sort(arr3);
		  if(arr3.length%2==0){
	            System.out.println( arr3[arr3.length/2]);
	            return;
	        }
		  System.out.println((arr3[arr3.length/2]+arr3[(arr3.length/2)-1])/2);
	}

}
